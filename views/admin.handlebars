<div class="container admin">

  <div class="row">
    <div class="col s12">
          <h2 class="section-heading">Admin</h2>
    </div>
  </div>

  <div class="row sections" id="admin-form">

    <form class="col s12 create-form">

        <div class="row">
          <div class="input-field col s12">
            <textarea id="cookie-text" class="materialize-textarea"></textarea>
            <label for="cookie-text">Cookie Set Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="cookie-description" class="materialize-textarea"></textarea>
            <label for="cookie-description">Description</label>
          </div>
        </div>
        <div class="row">
            <label>Choose File to Upload</label>
            <div class="file-field input-field">
              <div class="btn">
                  <span>Browse</span>
                  <input type="file" multiple />
              </div>              
              <div class="file-path-wrapper">
                  <input class="file-path validate" id="cookie-file-name" type="text" placeholder="Upload a single JPEG file"/>
              </div>
            </div>    
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="cookie-category" class="materialize-textarea"></textarea>
            <label for="textarea">Primary Category</label>
          </div>
        </div>
        <div class="row">
          <button class="btn waves-effect waves-light right" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
    </form>
  </div>
  <div class="row sections" id="admin-form">
    <div class="col s12">
      <ul>
        {{#each cookie}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="updateCookie btn btn-warning" id ="updateButton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
            <button type="button" class="deleteCookie btn btn-warning" id ="deleteButton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
            <hr>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

